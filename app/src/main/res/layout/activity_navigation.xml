<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alcaj.barbroslokaltrafik.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/navigationtitlebackground" />

            <TextView
                android:id="@+id/textViewOnWayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/OnYourWayTitle"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:layout_alignBottom="@id/imageViewTitle"
                android:layout_alignLeft="@id/imageViewTitle"
                android:layout_alignRight="@id/imageViewTitle"
                android:layout_alignTop="@id/imageViewTitle"
                />


        </RelativeLayout>

        <Button
            android:id="@+id/buttonEnlargeMap"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/mellanplankarta1medgrej"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewNavStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/navigationtitlebackground" />

            <TextView
                android:id="@+id/textViewNavStatusFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/OnYourWayTitle"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_alignBottom="@id/imageViewNavStatus"
                android:layout_alignLeft="@id/imageViewNavStatus"
                android:layout_alignRight="@id/imageViewNavStatus"
                android:layout_alignTop="@id/imageViewNavStatus"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewArtOnway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ArtOnTheWay"
                android:textColor="#000000"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewArtOnWay"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/artonway6locations" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonArtPiece1"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/artandetagfotfastethumbnail"
                        android:text="" />

                    <Button
                        android:id="@+id/buttonArtPiece2"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/artandetagfotfastethumbnail"
                        android:text="" />

                    <Button
                        android:id="@+id/buttonArtPiece3"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/artandetagfotfastethumbnail"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonArtPiece4"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="98dp"
                        android:layout_weight="1"
                        android:background="@drawable/artandetagfotfastethumbnail"
                        android:text="" />

                    <Button
                        android:id="@+id/buttonArtPiece5"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/artandetagfotfastethumbnail"
                        android:text="" />

                    <Button
                        android:id="@+id/buttonArtPiece6"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/artandetagfotfastethumbnail"
                        android:text="" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
