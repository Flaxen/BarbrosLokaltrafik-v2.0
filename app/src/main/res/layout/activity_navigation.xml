<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comalcaj.barbroslokaltrafik.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/navigationtitlebackground" />

            <TextView
                android:id="@+id/textViewOnWayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/OnYourWayTitle"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:layout_alignBottom="@id/imageViewTitle"
                android:layout_alignLeft="@id/imageViewTitle"
                android:layout_alignRight="@id/imageViewTitle"
                android:layout_alignTop="@id/imageViewTitle"
                />


        </RelativeLayout>

        <Button
            android:id="@+id/buttonEnlargeMap"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/mellanplankarta1medgrej"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewNavStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/navigationtitlebackground" />

            <TextView
                android:id="@+id/textViewNavStatusFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/OnYourWayTitle"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_alignBottom="@id/imageViewNavStatus"
                android:layout_alignLeft="@id/imageViewNavStatus"
                android:layout_alignRight="@id/imageViewNavStatus"
                android:layout_alignTop="@id/imageViewNavStatus"/>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewArtOnway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ArtOnTheWay"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                app:srcCompat="@drawable/tempartonway" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
