<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nu.ssis.alcaj.barbroslokaltrafik.MainMenu">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textWindowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/main_menu_window_title"
            android:textSize="25sp"/>

        <ImageView
            android:contentDescription="@string/dividing_line"
            android:id="@+id/imageDivideLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dividingline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/buttonCity"
                android:layout_width="140dp"
                android:layout_height="76dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/citythumbnail"
                android:text="@string/button_city"
                style="@style/AudioFileInfoOverlayText"/>

            <Button
                android:id="@+id/buttonOdenplan"
                android:layout_width="140dp"
                android:layout_height="76dp"
                android:background="@drawable/odenplanthumbnail"
                android:text="@string/button_odenplan"
                style="@style/AudioFileInfoOverlayText"
                />
        </LinearLayout>

        <TextView
            style="@style/Base.V7.Widget.AppCompat.EditText"
            android:id="@+id/TextViewFrom"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:text="@string/input_field_from"
            />

        <TextView
            style="@style/Base.V7.Widget.AppCompat.EditText"
            android:id="@+id/TextViewTo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/input_field_to"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            >

            <Button
                android:id="@+id/buttonKarta"
                android:layout_width="250dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mapctythumbnail"
                android:text="@string/map_title"
                android:textSize="20sp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/buttonKonst"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/artbutton"
            android:text="@string/art_button"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
